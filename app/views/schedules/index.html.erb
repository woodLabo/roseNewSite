<h2>SCHEDULE</h2>
<section class="schedule_section">
  <h3>LIVE</h3>
  <% if @live.present? %>
    <ul>
      <% @live.each do |live| %>
        <li>
          <span class="schedule_date"><%= live.date.strftime("%m月%d日") %></span>
          <span><%= link_to(live.place, {:action => :show, :id => live.id}) %></span>
        <% end %>
        </li>
    </ul>
  <% else %>
    <p>現在予定はありません</p>
  <% end %>
  <p class="ticket_reserve_text">チケット予約は<%= link_to("こちら", {:controller => :contacts, :action => :index}) %>から</p>
</section>
<section class="schedule_section">
  <h3>昼・夜会</h3>
  <% if @meet.present? %>
    <ul>
      <% @meet.each do |meet| %>
        <li>
          <span class="schedule_date"><%= meet.date.strftime("%m月%d日") %></span>
          <span><%= link_to(meet.place, {:action => :show, :id => meet.id}) %></span>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>現在予定はありません</p>
  <% end %>
</section>
<% if @instore.present? %>
<section class="schedule_section">
  <h3>インストアイベント</h3>
  <ul>
    <% @instore.each do |instore| %>
    <li>
      <span class="schedule_date"><%= instore.date.strftime("%m月%d日") %></span>
      <span><%= link_to(instore.place, {:action => :show, :id => instore.id}) %></span>
    </li>
  <% end %>
  </ul>
</section>
<% end %>
